<p id="notice"><%= notice %></p>

<h1>Blogposts</h1>

<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Veröffentlicht?</th>
      <th>Letztes Update</th>
      <th>Ansehen</th>
      <th>Editieren</th>
      <th>Löschen</th>
    </tr>
  </thead>

  <tbody>
    <% @blogposts.each do |blogpost| %>
      <tr>
          <td><%= blogpost.title %></td>
          <td><%= blogpost.published%></td>
          <td><%= blogpost.updated_at ? blogpost.updated_at : blogpost.created_at %></td>
   

        <td><%= link_to 'Show', blogpost %></td>
        <td><%= link_to 'Edit', edit_blogpost_path(blogpost) %></td>
        <td><%= link_to 'Destroy', blogpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blogpost', new_blogpost_path %>
