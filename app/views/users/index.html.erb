<%title "Benutzerliste"%>

<p id="notice"><%= notice %></p>

<h1>Liste aller Benutzer</h1>

<table>
  <thead>
    <tr>
      <th>Benutzername</th>
      <th>Email</th>
      <th>Administrator</th>
      <th>Dabei seit</th>
      <th>Letzte Ã„nderung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>  

</table>

