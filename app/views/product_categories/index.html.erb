<%title "Portfolio"%>
<div class= "row">
    <p id="notice"><%= notice %></p>
    <% if admin? %>
        <div class="row"><%= button_to( "Listenansicht zum Verwalten", product_categories_list_url, method: :get)%>
        </div>
    <% end %>
    <% @product_categories.order(:position).each do |cat| %>
        <div class="box col-3 col-m-6">
            <div class="boxcontent cat-image"> 
                <%= link_to cat do %> 
                <%=image_tag(cat.image(:medium))%>
                <span class="text-content">
                    <span><%= cat.name%></span>
                </span>
                <% end #do%>
                
            </div>

        </div> 
    <% end #do%>
</div>

