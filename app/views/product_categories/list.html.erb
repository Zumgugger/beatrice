<p id="notice"><%= notice %></p>

<h1>Kategorien</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Beschrieb</th>
      <th>Veröffentlicht</th>
      <th>Bild</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.name %></td>
        <td><%= product_category.description %></td>
        <td><%= product_category.published %></td>
        <td><%= image_tag(product_category.image(:thumb)) %></td>
        <td><%= link_to 'Anzeigen', product_category %></td>
        <td><%= link_to 'Ändern', edit_product_category_path(product_category) %></td>
        <td><%= link_to 'Löschen', product_category, method: :delete, data: { confirm: 'Würklech?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
<%= button_to 'Neue Kategorie erstellen', new_product_category_path, method: :get %>
</div>